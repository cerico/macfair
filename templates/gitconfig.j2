[user]
# Please adapt and uncomment the following lines:
{% if git_name.stdout %}
	name = {{ git_name.stdout }}
{% else %}
#	name = name
{% endif %}
{% if git_email.stdout %}
        email = {{ git_email.stdout }}
{% else %}
#       email = email
{% endif %}
[init]
        defaultBranch = main
        templatedir = ~/.git-templates
[alias]
        br = checkout -b
        main = !git reset  $(git rev-parse main)
        remot = remote -v
[push]
        autoSetupRemote = true
[core]
        editor = vi
[commit]
        template = ~/.gitmessage
