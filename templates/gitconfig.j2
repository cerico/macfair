[user]
# Please adapt and uncomment the following lines:
{% if git_name.stdout %}
	name = {{ git_name.stdout }}
{% else %}
#	name = name
{% endif %}
{% if git_email.stdout %}
        email = {{ git_email.stdout }}
{% else %}
#       email = email
{% endif %}
[init]
        defaultBranch = main
        templatedir = ~/.git-templates
[alias]
        br = checkout -b
        main = !git reset  $(git rev-parse main)
        remot = remote -v
        changed = whatchanged
        last = ! git branch --format='%(HEAD)%(color:yellow)%(refname:short)|%(color:bold green)%(committerdate:relative)|%(color:blue)%(subject)|%(color:reset)' --color=always | column -ts'|' | head -n 10
        full = ! git branch --format='%(HEAD)%(color:yellow)%(refname:short)|%(color:bold green)%(committerdate:relative)|%(color:blue)%(subject)|%(color:reset)' --color=always | column -ts'|'
        park = ! git add . && git commit -m \"wip: parking this here for now\"
[push]
        autoSetupRemote = true
[core]
        editor = vi
[commit]
        template = ~/.gitmessage
[branch]
        sort = -committerdate
