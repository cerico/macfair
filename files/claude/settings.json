{
  "alwaysThinkingEnabled": true,
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "permissions": {
    "allow": [
      "mcp__playwright__browser_navigate",
      "mcp__playwright__browser_navigate_back",
      "mcp__playwright__browser_click",
      "mcp__playwright__browser_hover",
      "mcp__playwright__browser_type",
      "mcp__playwright__browser_press_key",
      "mcp__playwright__browser_select_option",
      "mcp__playwright__browser_fill_form",
      "mcp__playwright__browser_take_screenshot",
      "mcp__playwright__browser_snapshot",
      "mcp__playwright__browser_console_messages",
      "mcp__playwright__browser_network_requests",
      "mcp__playwright__browser_tabs",
      "mcp__playwright__browser_wait_for",
      "mcp__playwright__browser_evaluate",
      "WebFetch(domain:*)",
      "WebSearch",
      "Read(*)",
      "Glob(*)",
      "Grep(*)",
      "Skill(skill:review-pr)",
      "Bash(pnpm list *)",
      "Bash(pnpm run build *)",
      "Bash(pnpm run dev *)",
      "Bash(pnpm run test *)",
      "Bash(pnpm run lint *)",
      "Bash(pnpm outdated *)",
      "Bash(pnpm why *)",
      "Bash(pnpm remove *)",
      "Bash(pnpm prisma generate)",
      "Bash(pnpm install *)",
      "Bash(pnpm add *)",
      "Bash(pnpm exec prisma *)",
      "Bash(git *)",
      "Bash(gh issue *)",
      "Bash(gh pr view *)",
      "Bash(gh pr list *)",
      "Bash(gh pr checks *)",
      "Bash(gh api --method GET *)",
      "Bash(semgrep *)",
      "Bash(nightshift:*)",
      "Bash(/usr/local/bin/speak *)"
    ],
    "deny": [
      "Bash(git push *)",
      "Bash(git push)",
      "Bash(gh pr create *)",
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/.npmrc)",
      "Read(**/tokens.zsh)",
      "Read(**/keys.zsh)",
      "Read(**/*.pem)",
      "Read(**/.ssh/*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bun run ~/.claude/hooks/celeste.ts"
          },
          {
            "type": "command",
            "command": "bun run ~/.claude/hooks/doctor.ts"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bun run ~/.claude/hooks/update-tab-titles.ts"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bun run ~/.claude/hooks/security-validator.ts"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bun run ~/.claude/hooks/typescript-checker.ts",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "bun run ~/.claude/hooks/typescript-checker.ts",
            "timeout": 30
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/pre-compact.sh"
          }
        ]
      }
    ]
  }
}
