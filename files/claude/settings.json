{
  "alwaysThinkingEnabled": true,
  "statusLine": {
    "type": "command",
    "command": "~/.claude/statusline.sh",
    "padding": 0
  },
  "enabledPlugins": {
    "voicemode@mbailey": true
  },
  "permissions": {
    "allow": [
      "mcp__voicemode__*",
      "mcp__plugin_voicemode_voicemode__*"
    ],
    "deny": [
      "Read(**/.env)",
      "Read(**/.env.*)",
      "Read(**/.npmrc)",
      "Read(**/tokens.zsh)",
      "Read(**/keys.zsh)",
      "Read(**/*.pem)",
      "Read(**/.ssh/*)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bun run ~/.claude/hooks/celeste.ts"
          },
          {
            "type": "command",
            "command": "bun run ~/.claude/hooks/doctor.ts"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bun run ~/.claude/hooks/update-tab-titles.ts"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bun run ~/.claude/hooks/security-validator.ts"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/pre-compact.sh"
          }
        ]
      }
    ]
  }
}
